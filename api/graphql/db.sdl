type Product {
  id: ID! 
  name: String @fake(type: productName)
  description: String 
  price: Float!
}

type Query {
  product(id: ID!): Product
  products: [Product]
}

type Mutation {
  addProduct(name: String!, description: String, price: Float!): Product
  deleteProduct(id: ID!): Product
}

schema {
  query: Query
  mutation: Mutation
}
